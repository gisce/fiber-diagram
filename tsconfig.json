{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strictBindCallApply": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.stories.*",
    "**/*.test.*"
  ]
}